<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name, "Artist's Name" %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genre_id, "Artist's Name" %>
  <%= f.select :genre_id, Genre.all.collect { |g| [ g.name, g.id ] } %>
  
  <%= f.label :note_ids %>

  <h3>Notes</h3>
  <%= f.fields_for :notes do |note_field| %>
    <%= note_field.label :note %>
    <%= note_field.text_area :content, rows: 5, cols: 50 %>
    <br>
  <% end  %>
  
  

  <%= f.submit %>
<% end %>


