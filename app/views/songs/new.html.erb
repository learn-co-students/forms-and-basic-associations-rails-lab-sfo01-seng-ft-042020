<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />
  
  <% 3.times {@song.notes.build} %>
  <%= f.fields_for :notes do |ff| %>
    <%= ff.label :note %>
    <%= ff.text_area :content %><br />
  <% end %>

  <%= f.submit %>
<% end %>


